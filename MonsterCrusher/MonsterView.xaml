<UserControl x:Class="MonsterCrusher.MonsterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonsterCrusher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid x:Name="grdMonsterProps" ItemsSource="{Binding Path=Properties}" AutoGenerateColumns="False" Margin="0">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Path=Name}" Header="Name" MinWidth="199"/>
            <DataGridTextColumn Binding="{Binding Path=Value}" Header="Value" MinWidth="199"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
